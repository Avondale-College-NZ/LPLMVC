@model IEnumerable<LPLMVC.Areas.Identity.Data.LPLMVCUser>

@{
    ViewBag.Title = "Users";
}

<h1>List of Users</h1>
<hr />

@if (Model.Any())
{
    <a asp-page="/Account/Register" asp-area="Identity"
       class="btn btn-primary mb-3" style="width:auto">
        Add a new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.Email </h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary text-light">Edit</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger text-light">Yes</button>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@user.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@user.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            There are currently no users.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Please register a user.
            </h5>
            <a asp-action="Register" asp-controller="Account">
                Register
            </a>
        </div>
    </div>
}

@section Scripts{
<script src="~/js/DeleteScript.js"></script>
 }