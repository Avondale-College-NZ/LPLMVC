@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cdn.cloudflare.steamstatic.com/apps/dota2/images/blog/play/dota_heroes.png" style="width:1000px; height:500px" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-light">Bruh</h5>
                <p class="text-light">Bruh Moment</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.insider.com/5b7e9f3089c8a1d9218b48b6?width=1100&format=jpeg&auto=webp" style="width:1000px; height:500px" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-light">Bruh</h5>
                <p class="text-light">Bruh Moment</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.imgur.com/nMPK14n.png" style="width:1000px; height:500px" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-light">Bruh</h5>
                <p class="text-light">Bruh Moment</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="flex-sm-row-reverse">
        <div>
            <h3 class="text-dark text-center"><u><b>2020 LPL Dota 2 Tournament</b></u></h3>
            <p class="text-dark">
                LPL invites you and your school to participate in this year's Dota 2 Tournament. To enter the tournament you're required to register and add your team
                to the tournament. There will be a maximum of 20 teams so be sure to apply quickly. By competing in this tournament you and your team will have a chance of winning
                prizes and the team that achieves first place will continue to play against schools all across Australia for the chance to win $3700 AUD.
            </p>
            <br />
        </div>

        <div>
            <h3 class="text-dark text-center"><u><b>Tournament Details:</b></u></h3>
            <p class="text-dark">LOL</p>

                        <div class="container text-center align-content-center" style="width:500px">
                            <a asp-action="Index" asp-controller="Team" class="btn btn-danger text-light">Register Your Team</a>
                        </div>
                        <br />
        </div>
</div>








